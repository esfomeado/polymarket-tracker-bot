# ============================================
# DISCORD SETUP (Required)
# ============================================
DISCORD_TOKEN=your-discord-token
COMMAND_PREFIX=!
ALERT_ROLE_ID=your-alert-role-id
SEND_TRADES_ONLY=true

# ============================================
# POLYMARKET API SETUP (Required for trading)
# ============================================
POLYMARKET_PRIVATE_KEY=your-private-key
POLYMARKET_FUNDER=your-polymarket-funder
POLYMARKET_SIGNATURE_TYPE=1

# ============================================
# POLYMARKET WEBSOCKET SETUP (OPTIONAL)
# ============================================
POLY_WS_API_KEY=your-poly-ws-key
POLY_WS_API_SECRET=your-poly-ws-secret
POLY_WS_API_PASSPHRASE=your-poly-passphrase

# ============================================
# TRADE FILTERING (CRITICAL!)
# ============================================
# Leave empty for all markets
AUTO_TRADE_FILTER=BTC,Bitcoin,btc,bitcoin
# Only Bitcoin markets (default)
STOP_LOSS_WEBSOCKET_MARKET_FILTER=bitcoin

# ============================================
# AUTO-TRADING SETTINGS
# ============================================
# Enable/disable automatic trading
# Set to true to auto-trade, false to only track
AUTO_TRADE_ENABLED=true
COPY_TRADE_ENABLED=true

# Use market orders (true) or limit orders (false)
AUTO_TRADE_USE_MARKET=true

# ============================================
# TRADE SIZE LIMITS (Based on Analysis)
# ============================================
MIN_TRACKED_TRADE_SIZE_USD=10

# ============================================
# POSITION SIZING AND CONFIDENCE
# ============================================
USE_HALF_SIZE_INITIAL_TRADES=false
AUTO_TRADE_AMOUNT_USD=1
MAX_BET_AMOUNT_PER_MARKET_USD=3
MAX_ORDER_VALUE_USD=5
ADD_HIGH_CONFIDENCE_ENABLED=true
ADD_HIGH_CONFIDENCE_MIN=0.8
ADD_HIGH_CONFIDENCE_MAX=0.9
ADD_HIGH_CONFIDENCE_SIZE_USD=1

# ============================================
# CONFIDENCE FILTER SETTINGS
# ============================================
OPTIMAL_CONFIDENCE_MIN=0.6
OPTIMAL_CONFIDENCE_MAX=0.8
OPTIMAL_CONFIDENCE_BET_MULTIPLIER=1
USE_OPTIMAL_CONFIDENCE_FILTER=true
MIN_TRACKED_CONFIDENCE_LEVEL=0.60

# ============================================
# POSITION LIMITS
# ============================================
MAX_POSITIONS=20
MAX_TOTAL_EXPOSURE_USD=250

# ============================================
# CONFIDENCE-BASED TRADING AMOUNTS
# ============================================
HIGH_CONFIDENCE_THRESHOLD_USD=50
LOW_CONFIDENCE_THRESHOLD_USD=10

# ============================================
# STOP-LOSS SETTINGS
# ============================================
STOP_LOSS_ENABLED=false
STOP_LOSS_PERCENTAGE=30
STOP_LOSS_CHECK_INTERVAL_MS=60000
STOP_LOSS_WEBSOCKET_MARKET_FILTER=btc,bitcoin,BTC

# ============================================
# POLLING SETTINGS
# ============================================
# How often to poll for new trades (in milliseconds)
# Minimum: 500 (0.5 seconds) for rate limit safety
# Recommended:
#   - Monitoring only: 5000-10000 (5-10 seconds)
#   - Active auto-trading: 500-1000 (0.5-1 second)
#   - Conservative auto-trading: 2000-3000 (2-3 seconds)
POLL_INTERVAL_MS=10000

# ============================================
# ERROR HANDLING
# ============================================
CLOUDFLARE_RETRY_DELAY_MS=60000
MAX_CLOUDFLARE_RETRIES=2

# ============================================
# PAPER TRADING (Testing)
# ============================================
PAPER_TRADING_ENABLED=false
PAPER_TRADING_INITIAL_BALANCE=500

# ============================================
# NETWORK SETTINGS
# ============================================
POLYGON_RPC=https://polygon-rpc.com

# ============================================
# NOTIFICATION SETTINGS
# ============================================
BIG_TRADE_THRESHOLD_USD=30
SEND_ACTIVITY_HISTORY=false
COPY_SELL_ORDERS=false

# ============================================
# ANALYTICS SETTINGS
# ============================================
FILTER_MARKET_TYPE=sports
FILTER_CONFIDENCE_MIN=0.6 
FILTER_CONFIDENCE_MAX=0.8